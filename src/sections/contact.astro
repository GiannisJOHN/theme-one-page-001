---

let dataContent = Astro.props.content.contact
let dataUi = Astro.props.ui.form

---

<section id="contact-section" class="section side-padding section-vertical-spacing">
    <div class="container">
        <h2 class="section-title u-text-center">{ dataContent.title }</h2>
        <div class="contact-info">
            <div>
                <form action="/submit_form" method="POST">
                    <div class="form-group">
                        <label for="name">{ dataUi.name }</label>
                        <input class="contact-form-input" type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">{ dataUi.phone }</label>
                        <input class="contact-form-input" type="tel" id="phone" name="phone" required>
                    </div>
                    <div class="form-group">
                        <label for="email">{ dataUi.email }</label>
                        <input class="contact-form-input" type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">{ dataUi.message }</label>
                        <textarea class="contact-form-textarea" id="message" name="message" rows="4" cols="50" required></textarea>
                    </div>
                    <button type="submit">{ dataUi.button }</button>
                </form>
            </div>
            <div>
                <div class="contact-info-box">
                    <h3>{ dataContent.phone }</h3>
                    <p>+47 545 23890</p>
                </div>
                <div class="contact-info-box">
                    <h3>{ dataContent.email }</h3>
                    <p>johndoe@mail.com</p>
                </div>
            </div>
        </div>
    </div>
</section>