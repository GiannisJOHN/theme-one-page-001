---
let data = Astro.props.content.achievements;
---

<section
    id="achievements-section"
    class="achievements-section section side-padding"
>
    <div class="container achievements-container">
        {
            data.map((each, index, array) => {
                return (
                    <>
                        <div class="achievements-box">
                            <h3 class="section-title">{ each.title }</h3>
                            <p class="main-paragraph">{ each.info }</p>
                        </div>
                        {index <= array.length - 2 ? <div class="achievements-box-line"></div> : ''}
                    </>
                );
            })
        }
        
    </div>
</section>
