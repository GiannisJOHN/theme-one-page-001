---
import ServicesCard from '../components/services-card.astro';

let data = Astro.props.content.services


---


<section id="services-section" class="services-section section side-padding section-vertical-spacing">
    <div class="container">

        <h2 class="section-title u-text-center">{data.title}</h2>
        <div class="services-grid-3-columns">
            {
                data.list.map((each) => {

                    return (
                        <>
                            <ServicesCard  title={each.title} description={each.description} iconUrl={each.icon} />
                        </>
                    )
                    
                })
            }
        </div>
    </div>
</section>