---
import Layout from "@/layouts/layout.astro";
import Hero from "@/sections/hero.astro";
import About from "@/sections/about.astro";
import Services from "@/sections/services.astro";
import Skills from "@/sections/skills.astro";
import Achievements from "@/sections/achievements.astro";
import Newsletter from "@/sections/newsletter.astro";
import Testimonials from "@/sections/testimonials.astro";
import Contact from "@/sections/contact.astro";

//data
import { localesData } from "@/locales/locales-data-aggregator";
//localesData['en'].meta or localesData['en'].ui or localesData['en'].content.about


const locale = Astro.props.lang;

const meta = localesData[locale].meta;
const ui = localesData[locale].ui;
const content = localesData[locale].content;

---

<Layout meta={meta} ui={ui} >
  <Hero content={content} />
  <About content={content} />
  <Services content={content} />
  <Skills content={content} />
  <Achievements content={content} />
  <Newsletter content={content} />
  <Testimonials content={content} />
  <Contact content={content} ui={ui} />
</Layout>